@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    string returnUrl = ViewBag.ReturnUrl ?? "/";
}

<h2>Login</h2>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Login" method="post">
    <input type="hidden" name="returnUrl" value="@returnUrl" />

    <div class="form-group">
        <input type="email" asp-for="Email" placeholder="Email" name="email" id="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="password" asp-for="Password" placeholder="Password" name="password" id="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="anim">
            <input asp-for="RememberMe" type="checkbox" class="checkbox" required>
            <span>Remember Me</span>
        </label>
        <div class="clear"> </div>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

<hr />

<p>Or login using:</p>

<div class="text-center mt-3">
    <a asp-action="LoginWithGoogle" asp-route-returnUrl="@returnUrl" class="btn btn-danger">Login with Google</a>
</div>

<div class="text-center mt-3">
    <a asp-action="LoginWithFacebook" asp-route-returnUrl="@returnUrl" class="btn btn-primary">Login with Facebook</a>
</div>

<div class="col-md-6 col-md-offset-2">
    <p>Don't have an Account <a asp-action="SignUp"> Create Now!</a></p>
    <p> <a asp-action="ForgetPassword">Forget Password</a></p>
</div>

